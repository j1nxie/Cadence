{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": [
            "ES2019",
        ],
        "declaration": true,
        "strict": true,
        "allowJs": false,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": "src",
        "typeRoots": [
            "**/@types",
            "**/node_modules/@types",
        ]
    },
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "src/**/*.test.ts",
        "node_modules"
    ]
}
